@using System.Web.UI.WebControls
@using MOP.Models.Inventory
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_MainLayoutWithOutHeader.cshtml";
}
@{
    var customerList = ViewBag.CustomerList == null ? new List<Customer>() : ViewBag.CustomerList as List<Customer>;
    var customer = ViewBag.Customer == null ? new Customer() : ViewBag.Customer as Customer;
}

@using (Html.BeginForm("Customer", "Inventory", FormMethod.Post))
{
    <div class="inner-window">
        <div class="inner-head">
            CUSTOMER 
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <!--Edit buttons starts here-->
        <div class="col-sm-12 bottom-header">
            <ul>
                <li id="Customer_Add"><a href="#"><img src="/Content/MainLayout/images/icon-add-white.png" width="30" height="30"><span>Add</span></a></li>
                <li><a href="#"><img src="/Content/MainLayout/images/icon-edit-white.png" width="30" height="30"><span>Edit</span></a></li>
                <li><a href="#"><img src="/Content/MainLayout/images/icon-delete-white.png" width="30" height="30"><span>Delete</span></a></li>
                <li><a href="#"><img src="~/Content/MainLayout/images/icon-print-white.png" width="30" height="30"><span>Print</span></a></li>
                <li><a href="#"><img src="/Content/MainLayout/images/icon-exit-white.png" width="30" height="30"><span>Exit</span></a></li>
            </ul>
        </div>
        <!--Edit buttons ends here-->
        <div class="third-party-carriers">
            <!--Search starts here-->
            <div class="col-sm-12 search-container">
                <div class="col-sm-8 col-md-8 col-lg-8 no-padding">
                    <div class="col-sm-12 col-md-4 col-lg-4 no-padding first-col">
                        <div class="form-group">
                            <input class="form-control" placeholder="Search By Company Name">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-4 button-contr no-right-padding">
                        <button type="button" class="btn btn-primary" style="margin: 9px 0px;">Search</button>
                    </div>
                </div>
            </div>
            <!--Search ends here-->
            <!--Grid starts here-->
            <div class="col-sm-12 col-md-6 col-lg-6 grid-contr">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Name</th>
                                <th>City</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tempCustomerList in customerList)
                            {
                                <tr>
                                    <td>@Html.Raw(tempCustomerList.CompanyName)</td>
                                    <td>@Html.Raw(tempCustomerList.ContactName)</td>
                                    <td>@Html.Raw(tempCustomerList.City)</td>
                                    <td>@Html.Raw(tempCustomerList.Phone)</td>
                                    <td><a href="#"><img src="/Content/MainLayout/images/remove.png" width="30" height="30"></a></td>
                                </tr>  
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12 button-wrap">
                    <div class="col-sm-2 col-md-3 no-padding record-info">@Html.Raw(customerList.Count) Records</div>
                </div>
            </div>
            <!--Grid ends here-->
            <div class="col-sm-12 col-md-6 col-lg-6 no-left-padding">
                <div class="right-section">
                    <div class="col-sm-10 col-md-12 col-lg-12 general-info no-padding">
                        <div class="col-sm-12 col-md-12 col-lg-12 no-right-padding no-left-padding first-col">
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <h2>Personal Information</h2>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Company name :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.CompanyName)" name="CompanyName">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Contact Name :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.ContactName)" name="ContactName">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Contact Title :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.ContactTitle)" name="ContactTitle">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <h2>Address Information</h2>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Address :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.Address)" name="Address">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">City :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.City)" name="City">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <h2>Contact Information</h2>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Fax :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.Fax)" name="Fax">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-10 no-padding">
                                <div class="form-group">
                                    <label class="control-label">Phone :</label>
                                    <input class="form-control" placeholder="" value="@Html.Raw(customer.Phone)"name="Phone">
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary" style="margin: 9px 0px;">Save</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                </div><!--right-section Ends-->

            </div>
        </div><!--Customer Ends-->
    </div>
}
<script>
    $("#Customer_Add").click(function () {
       // alert("test check point");
        $("form").submit();
    });
</script>